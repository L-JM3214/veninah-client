import React, { useState } from 'react';

const PaymentForm = ({ number, amount }) => {
  const handlePayment = async () => {
    // Add your STK push logic here

    try {
      // Make a request to your backend to initiate the STK push with the provided number and amount
      const response = await fetch('/payment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ phone: number, amount: amount }),
      });

      const result = await response.json();

      if (result.message === 'Successful') {
        // Payment successful, you can perform any additional actions here
        console.log('Payment successful');
      } else {
        // Payment failed, you can handle the failure scenario here
        console.error('Payment failed');
      }
    } catch (error) {
      console.error('Error during payment:', error);
    }
  };

  return (
    <div className="payment-form-container">
      {/* You can customize the form as needed */}
      <label htmlFor="cardNumber">Card Number:</label>
      <input type="text" id="cardNumber" />

      <label htmlFor="expiry">Expiry Date:</label>
      <input type="text" id="expiry" />

      <label htmlFor="cvv">CVV:</label>
      <input type="text" id="cvv" />

      <button onClick={handlePayment}>Pay Now</button>
    </div>
  );
};

export default PaymentForm;

